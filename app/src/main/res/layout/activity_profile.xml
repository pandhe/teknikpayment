                    android:gravity="center_vertical"
                    android:letterSpacing="0.02"
                    android:text="Ubah Profil"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorMainFontBlue"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_width="0dp"
