                    app:srcCompat="@drawable/icon_out" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="70"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:letterSpacing="0.02"
                    android:text="Logout"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorMainFontBlue"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:background="@drawable/bg_button_transparent"
                    android:tint="@color/colorMainFontBlue"
                    app:srcCompat="@drawable/ic_action_selengkapnya" />
            </LinearLayout>

            <LinearLayout
