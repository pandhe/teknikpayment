                app:layout_constraintBottom_toBottomOf="@+id/img_profile"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toBottomOf="@+id/txt8" />

            <TextView
                android:id="@+id/txt10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Keluar"
                android:textAlignment="center"
                android:textColor="@color/colorMainNavbar"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/txt11"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/txt11"
                app:layout_constraintStart_toStartOf="@+id/guideline52"
                app:layout_constraintTop_toTopOf="@+id/view2"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/txt11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Rp. 0"
                android:textAlignment="center"
                android:textColor="#F3C10E"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/view2"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/txt10" />

            <ImageButton
                android:id="@+id/imageButton21"
