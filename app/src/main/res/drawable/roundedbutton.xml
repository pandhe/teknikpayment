<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true" >
    <shape android:shape="rectangle" android:padding="15dp">

        <gradient
            android:angle="180"

            android:startColor="#9F6B18"
            android:centerColor="#DCAE0C"
            android:endColor="#DCAE0C"
            android:type="linear" />
        <corners
            android:bottomRightRadius="8dp"
            android:bottomLeftRadius="8dp"
            android:topLeftRadius="8dp"
            android:topRightRadius="8dp"/>

    </shape>

    </item><!-- pressed -->

    <item >
        <shape android:shape="rectangle" android:padding="15dp">
            <gradient
                android:angle="180"

                android:startColor="#FFAB28"
                android:centerColor="#F3C10E"
                android:endColor="#F3C10E"
                android:type="linear" />

            <corners
                android:bottomRightRadius="8dp"
                android:bottomLeftRadius="8dp"
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp"/>

        </shape>
    </item> <!-- default -->
</selector>