<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid
                android:color="#ffffffff"/>
            <padding
                android:left="4dp"
                android:bottom="4dp"
                android:right="4dp"
                android:top="4dp"
                />

            <stroke android:width="1dip" android:color="#000000" />

        </shape>
    </item>

    <item
        >
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval">

            <solid
                android:color="#ffffffff"/>
            <padding
                android:left="4dp"
                android:bottom="4dp"
                android:right="4dp"
                android:top="4dp"
                />

            <stroke android:width="1dip" android:color="#ACABAB" />

        </shape>
    </item>
</selector>